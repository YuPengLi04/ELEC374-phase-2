// Ripple Carry Adder for Subtraction  
module sub(A, B, Result);

// sub if 1 its subtract, 0 if its add

input [31:0] A, B;
output [31:0] Result;

reg [31:0] Result;
reg [32:0] LocalCarry;

integer i;
integer j;
integer k;

always@(A or B)
	begin
		k = 0;
		for (j = 31; j > -1; j = j - 1) begin
			if (B[j] == 0) begin
				if (k == 0)
					B[j] = 0;
				else
					B[j] = 1;
			end
			else begin
				if (k == 0) begin
					B[j] = 0;
					k = 1;
					end
				else if (k == 1)
					B[j] = 0;
			end
    		end
      
		LocalCarry = 33'd0;
		for(i = 0; i < 32; i = i + 1)
		begin
				Result[i] = A[i]^B[i]^LocalCarry[i];
				LocalCarry[i+1] = (A[i]&B[i])|(LocalCarry[i]&(A[i]|B[i]));
		end
	end
endmodule
